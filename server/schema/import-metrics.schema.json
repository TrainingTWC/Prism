{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ImportMetrics",
  "type": "object",
  "properties": {
    "rows": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "store_id": { "type": "string" },
          "store_name": { "type": "string" },
          "metric_name": { "type": "string" },
          "metric_value": { "type": ["number", "integer"] },
          "period_type": { "type": "string", "enum": ["daily", "weekly", "monthly"] },
          "observed_period": { "type": "string" },
          "submission_time_utc": { "type": "string", "format": "date-time" },
          "observed_local_time": { "type": "string" },
          "store_timezone": { "type": "string" },
          "source": { "type": "string" },
          "notes": { "type": "string" }
        },
        "required": ["store_id", "metric_name", "metric_value", "period_type", "observed_period", "submission_time_utc"],
        "additionalProperties": false
      }
    },
    "options": {
      "type": "object",
      "properties": {
        "dryRun": { "type": "boolean" },
        "force": { "type": "boolean" }
      },
      "additionalProperties": false
    }
  },
  "required": ["rows"]
}
